{% extends 'base.html.twig' %}

{% block title %}
	Categories
{% endblock %}

{% block body %}
	<h2>Categorie :
		{{category.name}}</h2>

	<div class="row my-5">
		{% for product in category.products %}
			<div class="col-md-3">
				<h3>produit :{{product.name}}</h3>
				<a href="{{ path('app_product', {'slug':product.slug}) }}"><img src="uploads/{{product.illustration}}" class="img-fluid rounded-4" alt="{{product.name}}"></a>
				{{ product.priceWT|format_currency('EUR') }}
			</div>
		{% endfor %}
	</div>
{% endblock %}
