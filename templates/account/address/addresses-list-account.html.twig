{% extends 'base.html.twig' %}

{% block title %}Hello AddressController!
{% endblock %}

{% block body %}
	<h2>Liste des adresses</h2>

	{% if app.user.addresses|length == 0 %}

		<div>Vous n'avez pas enregistrer d'adresse</div>

	{% else %}

		<div class="row">
			{% for address in app.user.addresses %}
				<div class="col-md-3 m-3 bg-light p-3 text-center">
					<div>
						<strong>{{address.firstname}}
							{{address.lastname}}</strong>
					</div>
					<div>
						{{address.address}}
					</div>
					<div>
						{{address.postal}}
						{{address.city}}
						{{address.country}}
					</div>
					<div>
						{{address.phone}}
					</div>
					<div class="d-flex justify-content-between gap-1 pt-3">
						<a href="{{path('app_account_address_form', {id: address.id})}}" class="btn btn-primary flex-grow-1">{{ ux_icon('nimbus:edit', {width:"18px", height:"18px"}) }}
							Ã©diter</a>
						<a href="{{path('app_account_address_delete', {id: address.id})}}" class="btn btn-danger">{{ ux_icon('material-symbols:delete-outline-sharp', {width:"18px", height:"18px"}) }}</a>
					</div>
				</div>
			{% endfor %}
		</div>

	{% endif %}
{% endblock %}
